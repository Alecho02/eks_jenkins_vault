pipeline {
    agent {
        kubernetes {
            label 'ci-agent'
            defaultContainer 'maven'
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: jenkins-ci-agent
spec:
  serviceAccountName: jenkins
  containers:
    - name: maven
      image: maven:3.9.6-eclipse-temurin-17
      imagePullPolicy: IfNotPresent
      command:
        - cat           # MUY IMPORTANTE: que el contenedor no se salga
      tty: true
      resources:
        requests:
          cpu: "250m"
          memory: "512Mi"
        limits:
          cpu: "1"
          memory: "1Gi"
"""
        }
    }

    environment {
        APP_DIR = 'prueba_v1c3nt3/app/microservice'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                container('maven') {
                    dir("${APP_DIR}") {
                        sh 'mvn -B clean test'
                    }
                }
            }
        }

        stage('Package') {
            steps {
                container('maven') {
                    dir("${APP_DIR}") {
                        sh 'mvn -B package -DskipTests'
                    }
                }
            }
        }
    }
}
